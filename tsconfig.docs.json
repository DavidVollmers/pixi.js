{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "es6",
        "outDir": "./dist/compiled",
        "sourceMap": false,
        "allowJs": true,
        "moduleResolution": "node"
    },
    "include": [
        "bundles",
        "packages",
        "./global.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/dist/**",
        "**/lib/**",
        "**/test/**",
        "**/scripts/**",
        "**/types/**",
        "dist/**",
        "bundles/*/*.d.ts",
        "rollup.config.js",
    ]
}